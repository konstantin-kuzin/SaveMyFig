

{
  "name": "figma-backup-gui",
  "version": "1.0.0",
  "description": "GUI для бэкапа проектов Figma",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "run-backup": "node scripts/run-backup.js",
    "dist": "electron-builder",
    "build:electron": "electron-builder"
  },
  "dependencies": {
    "dotenv": "^16.0.0",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "@playwright/test": "^1.48.2",
    "@types/node": "^22.14.1"
  },
  "build": {
    "appId": "com.figmaexport.backup",
    "productName": "Figma Backup",
    "mac": {
      "category": "public.app-category.utilities",
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "files": [
      "**/*",
      "!node_modules/electron/**",
      "!dist/**"
    ]
  }
}